generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  username  String   @unique
  password  String
  email     String
  role      String

  deposit  deposit[]
  rekening rekening[]
}

model deposit {
  id                Int      @id @default(autoincrement())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  nominal_deposit   Int
  proof_transaction String
  status            String
  sender_bank       Int
  recipient_bank    Int

  author   user @relation(fields: [authorId], references: [id])
  authorId Int
}

model rekening {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  no_rekening String
  bank        String

  author   user @relation(fields: [authorId], references: [id])
  authorId Int
}
